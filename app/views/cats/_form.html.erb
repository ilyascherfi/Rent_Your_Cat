<div class = "container" >
   <div class = " mt-3">
      <%= simple_form_for @cat do |f| %>

        <%= f.input :name, label: 'Nom', required: false, wrapper_html: { class: "form-create" } %>
        <%= f.input :age , label: 'Age' , required: false %>
        <div class = " d-flex justify-content-between">
            <%= f.input :race, collection: Cat::RACE , label: 'Race' , required: false, wrapper_html: { class: 'w-50 me-1' } %>
            <%= f.input :sexe, collection: Cat::SEXE, label:'Sexe', required: false, wrapper_html: { class: 'w-50 ms-1' } %>
        </div>
        <%= f.input :price , label: 'Prix' , required: false %>
        <%= f.input :description, label:'Description', required: false %>
        <%= f.input :photos, as: :file, input_html: { multiple: true }, label:'Description', required: false %>
        <%= f.input :location, label:'Adresse' , required: false %>
    </div>
    <div class= "d-flex  flex-row-reverse fs-5">
        <%= f.submit class: "btn-grad mb-2" , label:'Creer mon chat', required: false %>
      <% end  %>
    </div>
</div>
