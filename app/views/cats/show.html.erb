<div class= "footer-container">
  <h2 class="pt-3"><%= @cat.name %></h2>
  <div class = "d-flex flex-row ms-3" >
    <p>reviews(comming soon)</p>
    <p class= "ms-3">Address:  <%= @cat.location  %></p>
  </div>
  <div class="d-flex flex-row pb-5">
    <% if @cat.photos.attached? %>
      <div class= "" >
        <%= cl_image_tag @cat.photos[0].key, height:300, width:400, crop: :fill, class:"card-img rounded-4" %>
      </div>
      <div class= "d-flex flex-column ">
        <% if @cat.photos.size == 2 %>
          <div>
            <%= cl_image_tag @cat.photos[1].key, height:300, width:400, crop: :fill, class:"card-small-img rounded-4  mb-2 ps-2" %>
          </div>
        <% end %>
        <% if @cat.photos.size == 3 %>
          <%= cl_image_tag @cat.photos[1].key, height:300, width:400, crop: :fill, class:"card-small-img rounded-4  mb-2 ps-2" %>
          <%= cl_image_tag @cat.photos[2].key, height:300, width:400, crop: :fill, class:"card-small-img rounded-4  mb-2 ps-2" %>
        <% end %>
      </div>
    <% else %>
    <div class= "" >
      <img src="<%= @cat.images_url[0]  %>" class="card-img rounded-4 " alt="">
    </div>
    <div class= "d-flex flex-column ">
      <img src="<%= @cat.images_url[1]  %>"  class="card-small-img rounded-4  mb-2 ps-2" alt="...">
      <img src="<%= @cat.images_url[2]  %>" class="card-small-img rounded-4  d-block ps-2"  alt="...">
    </div>
    <% end %>
  </div>
    <div class= "d-flex flew-row justify-content-between ps-3">
       <div class= >
         <div class="d-flex " >
              <div class = "" >
                <h2> Name: <%= @cat.name %></h2>
                <p class="ps-3">Race: <%= @cat.race %></p>
                <p class="ps-3">Sexe: <%= @cat.sexe %></p>
              </div>
            <img src="<%= User.find(@cat.user_id).image_url%>" class= "img-round margin-icone"  onerror="this.src='https://static.vecteezy.com/system/resources/previews/001/840/618/original/picture-profile-icon-male-icon-human-or-people-sign-and-symbol-free-vector.jpg'; this.onerror=null;" alt="">
          </div>
          <p class= "ps-3">Description: <%= @cat.description %></p>

       </div>
        <div class= "card card-text  rounded-4 pb-3 ms-2">
          <p class ="fw-bolder mt-3 mx-3">price by night <%= @cat.price %> â‚¬</p>
            <div class= "card justify-content-center">

              <div class= "p-3">
                <%= simple_form_for [@cat, @reservation] do |f| %>
                 <div class = "fs-5" >
                  <%= f.input :start_date,
                              as: :string,
                              input_html: { data: { controller: "datepicker" } } %>
                  <%= f.input :end_date,
                              as: :string,
                              input_html: { data: { controller: "datepicker" } } %>
                  </div>
                  <div class="d-flex  flex-row-reverse fs-3">
                    <%= f.submit "Reserver le Chat", class:"btn-grad5" %>
                  </div>
                <%end%>
              </div>
            </div>
            <div class = "d-flex flex-row justify-content-between mt-3">
            </div>
        </div>
    </div>
</div>
