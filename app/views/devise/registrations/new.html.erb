
<div class="container w-50">
  <h2 class="my-3 text-center "> Inscription <i class="fa-solid fa-right-to-bracket"></i></h2>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: false,

                  autofocus: true,
                  input_html: { autocomplete: "Nom" }%>
      <%= f.input :last_name,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "Prenom" }%>
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "Email" }%>
      <%= f.input :address,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "Addresse" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                  input_html: { autocomplete: "Mot de passe" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "Confirmation" } %>
    </div>

    <div class="form-actions ">
      <%= f.button :submit, "Inscription", class: "btn btn-grad mb-2 w-99" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
