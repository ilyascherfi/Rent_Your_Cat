<div class="d-flex" data-controller="button">
  <div class="container my-5">
    <button class = "btn btn-primary p-3" id="button-map" data-action="click->button#togglemap" >Afficher la carte</button>
    <div class= "card-trip">
      <div class="cards">
          <% @cats.each do |cat| %>
            <%# chat loop  %>
            <%= link_to cat_path(cat) do  %>
              <div class="card-trip">
                <%= cl_image_tag cat.photos.first.key %>
                <div class="card-trip-infos">
                  <div >
                    <div class= "d-flex justify-content-between">
                      <div>
                        <h2><span class="text-secondary"></span> <%= cat.name %> </h2>
                      </div>
                      <h2><span class="text-secondary"></span> <%= cat.price %> â‚¬ </h2>
                    </div>
                    <p><span class= "fw-semibold"></span><%= cat.description %></p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
      </div>
    </div>
  </div>

  <div id="map" class="d-none" data-controller="map" style="width: 40%; height: 850px; margin-top: 100px;" data-button-target="button"  data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
