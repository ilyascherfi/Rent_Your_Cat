<div class= " pt-5 text-center">
  <h1><%= @cat.name %></h1>
  <img class='rounded mx-auto d-block' src="<%= @cat.images_url[0] %>" alt="" style="width: 200px; height: auto; image-size: center;">
  <%= simple_form_for [@cat, @reservation] do |f| %>
  <div class = "fs-5" >
      <%= f.input :start_date,
                  as: :string,
                  input_html: { data: { controller: "datepicker" } } %>
      <%= f.input :end_date,
                  as: :string,
                  input_html: { data: { controller: "datepicker" } } %>
  </div>
  <div class="d-flex  flex-row-reverse fs-3">
        <%= f.submit "Reserver le Chat", class:"btn-grad5" %>
  </div>
    <%end%>
</div>
